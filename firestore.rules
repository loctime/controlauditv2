rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas para la colección usuarios
    match /usuarios/{userId} {
      // Permitir lectura y escritura si el usuario está autenticado y es el propietario del documento
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Permitir lectura si el usuario es supermax
      allow read: if request.auth != null && 
        exists(/databases/$(database)/documents/usuarios/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.role == 'supermax';
      
      // Permitir lectura si el usuario es max y está leyendo sus operarios
      allow read: if request.auth != null && 
        exists(/databases/$(database)/documents/usuarios/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.role == 'max' &&
        get(/databases/$(database)/documents/usuarios/$(userId)).data.clienteAdminId == request.auth.uid;
    }
    
    // Reglas para la colección empresas
    match /empresas/{empresaId} {
      // Permitir lectura y escritura si el usuario es el propietario
      allow read, write: if request.auth != null && 
        exists(/databases/$(database)/documents/usuarios/$(request.auth.uid)) &&
        (get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.role == 'supermax' ||
         resource.data.propietarioId == request.auth.uid ||
         get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.clienteAdminId == resource.data.propietarioId);
    }
    
    // Reglas para la colección reportes (auditorías)
    match /reportes/{reporteId} {
      // Permitir lectura y escritura si el usuario es el creador
      allow read, write: if request.auth != null && 
        exists(/databases/$(database)/documents/usuarios/$(request.auth.uid)) &&
        (get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.role == 'supermax' ||
         resource.data.usuarioId == request.auth.uid ||
         request.auth.uid in resource.data.compartidoCon);
    }
    
    // Reglas para la colección formularios
    match /formularios/{formularioId} {
      // Permitir lectura y escritura si el usuario es el propietario
      allow read, write: if request.auth != null && 
        exists(/databases/$(database)/documents/usuarios/$(request.auth.uid)) &&
        (get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.role == 'supermax' ||
         resource.data.clienteAdminId == request.auth.uid);
    }
    
    // Reglas para la colección logs
    match /logs/{logId} {
      // Solo supermax puede leer logs
      allow read: if request.auth != null && 
        exists(/databases/$(database)/documents/usuarios/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.role == 'supermax';
      
      // Cualquier usuario autenticado puede escribir logs
      allow write: if request.auth != null;
    }
    
    // Reglas para la colección sucursales
    match /sucursales/{sucursalId} {
      // Permitir lectura y escritura si el usuario tiene acceso a la empresa
      allow read, write: if request.auth != null && 
        exists(/databases/$(database)/documents/usuarios/$(request.auth.uid)) &&
        (get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.role == 'supermax' ||
         exists(/databases/$(database)/documents/empresas/$(resource.data.empresaId)) &&
         (get(/databases/$(database)/documents/empresas/$(resource.data.empresaId)).data.propietarioId == request.auth.uid ||
          get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.clienteAdminId == get(/databases/$(database)/documents/empresas/$(resource.data.empresaId)).data.propietarioId));
    }
  }
}
