# Configuración para producción
NODE_ENV=production

# Firebase Configuration
# IMPORTANTE: ControlAudit usa el MISMO proyecto Firebase que ControlFile
# Proyecto: controlstorage-eb796 (migrado desde auditoria-f9fc4)
# Esto permite que los tokens de autenticación sean válidos para ambos sistemas
VITE_FIREBASE_API_KEY=tu_api_key_produccion
VITE_FIREBASE_AUTH_DOMAIN=controlstorage-eb796.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=controlstorage-eb796
VITE_FIREBASE_STORAGE_BUCKET=controlstorage-eb796.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Backend Configuration
VITE_BACKEND_URL=https://api.controlaudit.app

# Admin Codes
VITE_ADMIN_CODE=AUDITORIA2024
VITE_SUPER_ADMIN_CODE=SUPERMAX2024

# Production Mode
VITE_DEBUG_MODE=false
VITE_ENABLE_LOGS=true
VITE_ENABLE_ANALYTICS=true

# ControlFile Integration (Auth compartido con ControlFile)
# Estas variables son obligatorias para que ControlFile funcione correctamente
# Si no se configuran, usará las variables VITE_FIREBASE_* por defecto (fallback)
VITE_CONTROLFILE_BACKEND_URL=https://controlfile.onrender.com
VITE_CONTROLFILE_API_KEY=
VITE_CONTROLFILE_AUTH_DOMAIN=
VITE_CONTROLFILE_PROJECT_ID=
# Opcionales (no se usan actualmente, pero puedes agregarlas si las necesitas)
VITE_CONTROLFILE_APP_ID=
VITE_CONTROLFILE_APP_DISPLAY_NAME=